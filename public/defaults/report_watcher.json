{
  "title": "reporter_title",
  "disable": false,
  "report": true,
  "trigger": {
    "schedule": {
      "later": "every 1 hour"
    }
  },
    "input": {
    "search": {
      "request": {
        "index": [],
        "body": {}
      }
    }
  },
  "condition": {
    "script": {
      "script": "payload.hits.total > 100"
    }
  },
  "actions": {
    "report_admin": {
      "throttle_period": "15m",
      "report": {
        "to": "report@localhost",
        "from": "sentinl@localhost",
        "subject": "Sentinl Report",
        "priority": "high",
        "body": "Sample Sentinl Screenshot Report",
        "save": true,
        "snapshot": {
          "res": "1280x900",
          "url": "http://127.0.0.1/app/kibana#/dashboard/Alerts",
          "path": "/tmp/",
          "params": {
            "delay": 5000,
            "crop": false
          }
        }
      }
    }
  }
}
